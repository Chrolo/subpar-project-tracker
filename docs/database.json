{
    "name": "subpar",
    "tables": [
        {
            "name": "api_keys",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "apiKey",
                    "type": "CHAR(36)",
                    "unique": true,
                    "notNull": true
                },
                {
                    "name": "description",
                    "type": "TEXT",
                    "description": "Short description of this key (ie/ 'WebsiteKey', 'ChroloBotKey', etc)"
                },
                {
                    "name": "email",
                    "type": "TEXT",
                    "description": "email address of person assigned to this key."
                },
                {
                    "name": "staffName",
                    "type": "TEXT",
                    "description": "Staff member assigned to this key."
                },
                {
                    "name": "permissionId",
                    "type": "INT",
                    "description": "the row in permissions that specifies their access",
                    "foreignKey": {
                        "table": "permissions",
                        "column": "id"
                    },
                    "unique": true
                }
            ]
        },
        {
            "name": "episodes",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "projectId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "projects",
                        "column": "id"
                    }
                },
                {
                    "name": "episodeName",
                    "type": "TEXT"
                },
                {
                    "name": "episodeNumber",
                    "type": "INT"
                },
                {
                    "name": "completed",
                    "type": "DATETIME"
                }
            ]
        },
        {
            "name": "episode_files",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "episodeId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "episodes",
                        "column": "id"
                    }
                },
                {
                    "name": "fileName",
                    "type": "TEXT"
                },
                {
                    "name": "ftpFilePath",
                    "type": "TEXT"
                },
                {
                    "name": "version",
                    "type": "FLOAT"
                },
                {
                    "name": "quality",
                    "type": "TEXT"
                }
            ]
        },
        {
            "name": "permissions",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "dataViewLevel",
                    "type": "INT",
                    "description": "the sensitivity level of data that is returned from the API."
                },
                {
                    "name": "taskUpdate",
                    "type": "INT",
                    "description": "the ability to update tasks."
                },
                {
                    "name": "projectDetailUpdate",
                    "type": "INT",
                    "description": "the ability to change the details of a project. Includes ability to add new episode records."
                },
                {
                    "name": "projectCreation",
                    "type": "INT",
                    "description": "the ability to create a new project."
                },
                {
                    "name": "apiTokenCreate",
                    "type": "INT",
                    "description": "the ability to create new API tokens."
                },
                {
                    "name": "apiTokenRevoke",
                    "type": "INT",
                    "description": "the ability to revoke API tokens (this is meant for admins)."
                }
            ]
        },
        {
            "name": "projects",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "name",
                    "type": "VARCHAR(255)",
                    "unique": true
                },
                {
                    "name": "completed",
                    "type": "DATETIME"
                },
                {
                    "name": "projectType",
                    "type": "TEXT"
                }
            ]
        },
        {
            "name": "project_aliases",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "projectId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "projects",
                        "column": "id"
                    }
                },
                {
                    "name": "alias",
                    "type": "VARCHAR(255)",
                    "unique": true
                }
            ]
        },
        {
            "name": "tasks",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "taskName",
                    "type": "TEXT"
                },
                {
                    "name": "staffName",
                    "type": "TEXT"
                },
                {
                    "name": "lastUpdated",
                    "type": "DATETIME"
                },
                {
                    "name": "completed",
                    "type": "DATETIME"
                },
                {
                    "name": "episodeId",
                    "type": "int",
                    "foreignKey": {
                        "table": "episodes",
                        "column": "id"
                    }
                }
            ]
        },
        {
            "name": "task_dependencies",
            "description": "Each row respresents a constraint that the 'preTask' is completed before the 'task' is begun",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "taskId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "tasks",
                        "column": "id"
                    }
                },
                {
                    "name": "preTaskId",
                    "type": "INT"
                }
            ]
        }
    ]
}