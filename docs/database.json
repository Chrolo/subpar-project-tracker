{
    "name": "subpar",
    "tables": {
        "api_keys": {
            "name": "api_keys",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "apiKey",
                    "type": "CHAR(36)",
                    "unique": true,
                    "notNull": true
                },
                {
                    "name": "description",
                    "type": "TEXT",
                    "description": "Short description of this key (ie/ 'WebsiteKey', 'ChroloBotKey', etc)"
                },
                {
                    "name": "email",
                    "type": "TEXT",
                    "description": "email address of person assigned to this key."
                },
                {
                    "name": "staffId",
                    "type": "INT",
                    "description": "Staff member assigned to this key.",
                    "foreignKey": {
                        "table": "staff",
                        "column": "id"
                    }
                },
                {
                    "name": "permissionId",
                    "type": "INT",
                    "description": "the row in permissions that specifies their access",
                    "foreignKey": {
                        "table": "permissions",
                        "column": "id"
                    },
                    "unique": true
                }
            ]
        },
        "episodes": {
            "name": "episodes",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "projectId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "projects",
                        "column": "id"
                    }
                },
                {
                    "name": "episodeName",
                    "type": "TEXT"
                },
                {
                    "name": "episodeNumber",
                    "type": "INT"
                },
                {
                    "name": "completed",
                    "type": "DATETIME"
                }
            ]
        },
        "episode_files": {
            "name": "episode_files",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "episodeId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "episodes",
                        "column": "id"
                    }
                },
                {
                    "name": "fileName",
                    "type": "TEXT"
                },
                {
                    "name": "ftpFilePath",
                    "type": "TEXT"
                },
                {
                    "name": "version",
                    "type": "FLOAT"
                },
                {
                    "name": "quality",
                    "type": "TEXT"
                }
            ]
        },
        "permissions": {
            "name": "permissions",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "dataViewLevel",
                    "type": "INT",
                    "description": "the sensitivity level of data that is returned from the API."
                },
                {
                    "name": "taskUpdate",
                    "type": "INT",
                    "description": "the ability to update tasks."
                },
                {
                    "name": "projectDetailUpdate",
                    "type": "INT",
                    "description": "the ability to change the details of a project. Includes ability to add new episode records."
                },
                {
                    "name": "projectCreation",
                    "type": "INT",
                    "description": "the ability to create a new project."
                },
                {
                    "name": "apiTokenCreate",
                    "type": "INT",
                    "description": "the ability to create new API tokens."
                },
                {
                    "name": "apiTokenRevoke",
                    "type": "INT",
                    "description": "the ability to revoke API tokens (this is meant for admins)."
                }
            ]
        },
        "projects": {
            "name": "projects",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "name",
                    "type": "VARCHAR(255)",
                    "unique": true
                },
                {
                    "name": "completed",
                    "type": "DATETIME"
                },
                {
                    "name": "projectType",
                    "type": "TEXT"
                },
                {
                    "name": "projectLeaderId",
                    "type": "INT",
                    "description": "the staff member responsible for this project",
                    "foreignKey": {
                        "table": "staff",
                        "column": "id"
                    }
                }
            ]
        },
        "project_aliases": {
            "name": "project_aliases",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "projectId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "projects",
                        "column": "id"
                    }
                },
                {
                    "name": "alias",
                    "type": "VARCHAR(255)",
                    "unique": true
                }
            ]
        },
        "staff": {
            "name": "staff",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "name",
                    "type": "VARCHAR(50)",
                    "unique": true,
                    "notNull": true
                },
                {
                    "name": "ircName",
                    "type": "VARCHAR(50)"
                },
                {
                    "name": "discordTag",
                    "type": "VARCHAR(50)",
                    "unique": true
                },
                {
                    "name": "email",
                    "type": "TEXT"
                },
                {
                    "name": "timezone",
                    "type": "TEXT"
                }
            ]
        },
        "tasks": {
            "name": "tasks",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "taskName",
                    "type": "TEXT"
                },
                {
                    "name": "staffId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "staff",
                        "column": "id"
                    }
                },
                {
                    "name": "lastUpdated",
                    "type": "DATETIME"
                },
                {
                    "name": "completed",
                    "type": "DATETIME"
                },
                {
                    "name": "episodeId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "episodes",
                        "column": "id"
                    }
                }
            ]
        },
        "task_dependencies": {
            "name": "task_dependencies",
            "description": "Each row respresents a constraint that the 'preTask' is completed before the 'task' is begun",
            "primaryKey": "id",
            "fields": [
                {
                    "name": "id",
                    "type": "INT",
                    "autoIncrement": true,
                    "notNull": true
                },
                {
                    "name": "taskId",
                    "type": "INT",
                    "foreignKey": {
                        "table": "tasks",
                        "column": "id"
                    }
                },
                {
                    "name": "preTaskId",
                    "type": "INT"
                }
            ]
        }
    }
}