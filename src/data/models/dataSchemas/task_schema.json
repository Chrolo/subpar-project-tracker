{
    "$id":"task_schema.json",
    "type":"object",
    "properties":{
        "id": {
            "type": "integer",
            "description": "The id of the task",
            "dataLevel": "public"
        },
        "taskName": {
            "type": "string",
            "description": "The name of the task",
            "dataLevel": "public"
        },
        "completed": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "the date the task was completed.",
            "dataLevel": "public"
        },
        "staffName": {
            "type": "string",
            "description": "name of the staff memeber responsible for this task",
            "dataLevel": "public"
        },
        "dependsOn":{
            "type": "array",
            "description": "Tasks that must be completed before this task.",
            "items":{
                "type": "integer",
                "description": "TaskId of task that should be complete before this one"
            },
            "dataLevel": "public"
        },
        "lastUpdated":{
            "type": ["string", "null"],
            "format": "date-time",
            "description": "When the task was last updated",
            "dataLevel": "public"
        },
        "episodeId": {
            "type": "integer",
            "description": "the episode the task is related to",
            "dataLevel": "debug"
        }
    },
    "additionalProperties": false,
    "required": [
        "staffName",
        "taskName"
    ]
}
