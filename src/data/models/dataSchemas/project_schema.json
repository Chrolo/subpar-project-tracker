{
    "$id": "project_schema.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "the project id",
            "dataLevel": "debug"
        },
        "name": {
            "type": "string",
            "description": "The name of the project",
            "dataLevel": "public"
        },
        "aliases": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "dataLevel": "public"
        },
        "episodes": {
            "type": "array",
            "items": {
                "$ref": "episode_schema.json"
            },
            "dataLevel": "public"
        },
        "completed": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "Date the project was completed (null if incomplete)",
            "dataLevel": "public"
        },

        "projectType": {
            "type": "string",
            "enum": [
                "TV",
                "BD",
                "OVA",
                "FILM",
                "MISC"
            ],
            "dataLevel": "public"
        }
    },
    "additionalProperties": false
}
